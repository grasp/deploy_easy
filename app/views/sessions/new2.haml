.container-fluid.login_head1
  =form_tag url(:sessions, :session_manage), :class=>'form-horizontal',:method=>"post" do
   
    %h2.text-md-center
      =image_tag('logo.png', :alt => "Under Track", :height => 150, :width => 150)
      
    .col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-4.col-sm-offset-4
      .form-group
        %label{:for => :email}= "用户名"
        = text_field_tag :email, :id => :email, :value => params[:email], :autofocus => true, :class =>'form-control input-large input-with-feedback'

      .form-group
        %label{:for => :password}= "密码"
        = password_field_tag :password, :id => :password, :class =>'form-control input-large input-with-feedback'


      .form-actions.order_submit
        = submit_tag(pat('login.sign_in'), :class => 'btn btn-primary pull-right')