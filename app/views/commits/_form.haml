- error = @commit.errors.include?(:message)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :message, :class => 'control-label'
  .controls
    =f.text_field :message, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:message, :class => 'text-error') : pat(:example)
